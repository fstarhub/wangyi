@import './reset.css';
@media only screen and (-webkit-device-pixel-ratio: 2) {
  .border-1px::before {
    transform: scaleY(0.5);
  }
}
@media only screen and (-webkit-device-pixel-ratio: 3) {
  .border-1px::before {
    transform: scaleY(0.333333);
  }
}


#app
  height 100%
  width 100%
.container
  height 100%
  width 100%


  //头部
  .header
    height 70px
    width 100%
    position fixed
    background white
    .navigation
      display flex
      height 35px
      justify-content: space-around
      align-items center
      .logo
        display block
        color black
        font-weight bold
        width 65px       
      .searchButton
        background #EDEDED
        padding 6px 20px
        border-radius 4px
        font-size 14px
      .loginBtn
        font-size 14px
        color red
        border-radius 3px
        border 1px solid red
        padding 4px


    .tabContainer
      height 35px
      width 100%
      display flex
      justify-content space-around
      align-items center
      font-size 16px
      .tabList
        height 35px
        line-height 35px
        padding 0 10px
        &.actived
          border-bottom 3px solid red
        
      
  //中间部分
  .contentContainer
    // background blue
    width 100%
    height 100%
    padding-top 70px
    .figures
      height 180px
      width 100%
      // background yellow
    .contentDetail
      height 150px
      width 100%
      // background red
      .titleContent
        width 100%
        height 30px
        // background pink
        .titleDetail
          display flex
          justify-content space-around
          align-content center
          .title
            padding 6px
            font-size 14px
      .detailList
        // background purple
        height 180px
        display flex
        flex-wrap wrap
        .contentList
          display flex
          flex-direction column
          align-items center
        img
          width 75px
          height 70px
        span
          font-size 14px



    //底部
  .footer
    height 50px
    width 100%
    background white
    position fixed
    bottom 0
    right 0
    display flex
    justify-content space-around
    // align-items center
    .home
      align-items center
      flex-grow 2.4
      display flex
      flex-direction column
      // background pink
      .iconfont
        font-size 30px
    .sort
      align-items center
